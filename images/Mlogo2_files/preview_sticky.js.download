DT.onReadyIdle(()=>{const preview=document.querySelector('.js-item-preview');if(!preview)return;const PADDING_OFFSET=10;let currentOffset=PADDING_OFFSET;const updateHeaderOffset=async()=>{let headerOffset=DT.getHeaderOffset()??0;headerOffset+=PADDING_OFFSET;if(currentOffset===headerOffset)return;await DT.Scheduler.yieldIfInputPending();preview.style.setProperty('--preview-top',`${headerOffset}px`);currentOffset=headerOffset};window.addEventListener('resize',DT.debounce(updateHeaderOffset,200));updateHeaderOffset()})